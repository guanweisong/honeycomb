{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@honeycomb/validation/*": [
        "../../packages/validation/src/*"
      ],
      "@honeycomb/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@honeycomb/trpc/*": [
        "../../packages/trpc/src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/validation"
    },
    {
      "path": "../../packages/ui"
    }
  ],
  "include": [
    "../../**/*.ts",
    "../../**/*.tsx",
    "../../.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ]
}
