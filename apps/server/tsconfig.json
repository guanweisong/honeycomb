{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@honeycomb/validation/*": [
        "../../packages/validation/src/*"
      ],
      "@honeycomb/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@honeycomb/trpc/*": [
        "../../packages/trpc/src/*"
      ],
      "@honeycomb/db/*": [
        "../../packages/db/src/*"
      ],
      "@honeycomb/env/*": [
        "../../packages/env/*"
      ],
      "@honeycomb/types/*": [
        "../../packages/types/src/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/validation"
    },
    {
      "path": "../../packages/trpc"
    },
    {
      "path": "../../packages/db"
    },
    {
      "path": "../../packages/env"
    },
    {
      "path": "../../packages/types"
    }
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
